<header>
    <div class="container">
       <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <%=link_to('Task on Rails', root_url, {class: "navbar-brand"})%>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <% if session[:user_id] %>
              <li class="nav-item">
                <%= link_to "授業登録", new_task_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "授業一覧", "/index/#{session[:user_id]}", class: "nav-link" %>
              </li>
              <li class="nav-item">
                 <%= link_to "ログアウト", "/logout", method: "delete", class: "nav-link" %>
              </li>
            <% else session[:user_id] == nil %>
              <li class="nav-item">
                <%= link_to('ログイン', '/login_form', {class: "nav-link" }) %>
              </li>
            <% end %>
          </ul>
        </div>
</nav>
    </div>
</header>